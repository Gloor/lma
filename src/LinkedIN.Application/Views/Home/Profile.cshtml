@model LinkedIN.Application.Model.Profile

@{
	ViewBag.Title = "Profile";
	//Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome, @Model.person.FirstName @Model.person.LastName!</h2>
<img src="@Model.person.PictureUrl" />
<br />
You have @Model.person.NetworkStats.properties[0].Value 1st degree connections 
<br />
You have @Model.person.NetworkStats.properties[1].Value 2nd degree connections 
<br /><br /><br /><br />
<table>
    <thead>
        <tr>
            <th>Week</th>
            <th>Hits</th>
            <th>Likes</th>
            <th>Comments</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0, j=1; i < 12; i++, j=i+1) {
		<tr>
            <td>week @j</td>
            <td>@Model.hits[i]</td>
            <td>@Model.likes[i]</td>
            <td>@Model.comments[i]</td>
        </tr>
         }
    </tbody>
</table>
<br /><br /><br /><br />
<br /><br /><br /><br />
@Html.ActionLink("Logout", "Logout")
